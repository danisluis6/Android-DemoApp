<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context="com.example.enclaveit.appdemo.ui.intent.DemoImplicitIntent">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/enter_number"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="45dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridLayout
            android:orientation="horizontal"
            android:columnCount="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btOne"
                android:text="1"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button1"
                android:layout_width="120dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/btTwo"
                android:text="2"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button1"
                android:layout_width="120dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/btThree"
                android:text="3"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button1"
                android:layout_width="120dp"
                android:layout_height="80dp"/>

            <Button
                android:id="@+id/btFour"
                android:text="4"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button1"
                android:layout_width="120dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/btFive"
                android:text="5"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button1"
                android:layout_width="120dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/btSix"
                android:text="6"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button1"
                android:layout_width="120dp"
                android:layout_height="80dp"/>

            <Button
                android:id="@+id/btSeven"
                android:text="7"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button1"
                android:layout_width="120dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/btEight"
                android:text="8"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button1"
                android:layout_width="120dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/btNine"
                android:text="9"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button1"
                android:layout_width="120dp"
                android:layout_height="80dp"/>

            <Button
                android:text="*"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button1"
                android:layout_width="120dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/btZero"
                android:text="0"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button1"
                android:layout_width="120dp"
                android:layout_height="80dp"/>
            <Button
                android:text="#"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button1"
                android:layout_width="120dp"
                android:layout_height="80dp"/>

            <Button
                android:id="@+id/btsms"
                android:text="sms"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button1"
                android:layout_width="120dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/btcall"
                android:text="call"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button1"
                android:layout_width="120dp"
                android:layout_height="80dp"/>
            <Button
                android:id="@+id/btimg"
                android:text="img"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button1"
                android:layout_width="120dp"
                android:layout_height="80dp"/>
        </GridLayout>
    </LinearLayout>
</LinearLayout>