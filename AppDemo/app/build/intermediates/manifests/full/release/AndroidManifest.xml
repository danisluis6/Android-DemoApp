<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.enclaveit.appcontacts"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.enclaveit.appdemo.ui.activities.MainMenu" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.enclaveit.appdemo.ui.activities.DemoActivity" />
        <activity android:name="com.example.enclaveit.appdemo.ui.intent.DemoExplicitIntent" />
        <activity android:name="com.example.enclaveit.appdemo.ui.intent.DemoExplicit" />
        <activity android:name="com.example.enclaveit.appdemo.ui.layout.TableLayoutActivity" />
        <activity android:name="com.example.enclaveit.appdemo.ui.intent.DemoImplicitIntent" />
        <activity android:name="com.example.enclaveit.appdemo.ui.fragment.MainActivity" />
    </application>

</manifest>